@model IEnumerable<SchoolManagement_342.Models.Context.Sp_Get_Subject_Result>

<link href="~/Content/CommonStyling.css" rel="stylesheet" />
<div class="text-center Main-Heading mb-3">
    <h2> Add Subject Below </h2>
</div>

<div class="table-responsive">

    <table class="table table-dark table-bordered text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    <button class="btn btn-outline-warning EditBtn ms-3 "><a class="text-white" href="@Url.Action("EditSubject" , "Subject",new {id=item.Id })">Edit</a></button>
                    <button class="btn btn-outline-danger text-black" onclick="SubjectDelConfirm(@item.Id)">Delete</button>
                </td>
            </tr>
        }

    </table>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/CommonJs.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
